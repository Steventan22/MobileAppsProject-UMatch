<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListViewChat"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="#DCD6F7"
        >

        <ImageButton
            android:layout_gravity="center_vertical"
            android:layout_width="60sp"
            android:layout_height="50sp"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/back">

        </ImageButton>

        <TextView
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Matches"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_margin="5sp"
        android:gravity="center_vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40sp"
            app:cardPreventCornerOverlap="false">
            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/bg_profile1">
            </ImageView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/nama1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:text="Leonardo, \nSistem Informasi"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginEnd="100sp">
        </TextView>
        <Button

            android:id="@+id/btnChat"
            android:layout_width="70sp"
            android:layout_height="60sp"
            android:text="Start Chat"
            android:textAllCaps="false"
            android:fontFamily="@font/made_tommy_regular"
            android:background="@drawable/bg_container_text">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_margin="5sp"
        android:gravity="center_vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40sp"
            app:cardPreventCornerOverlap="false">
            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/bg_profile2">
            </ImageView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:text="Arya, \nSistem Informasi"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginEnd="100sp">
        </TextView>
        <Button
            android:id="@+id/btnChat2"
            android:layout_width="70sp"
            android:layout_height="60sp"
            android:text="Start Chat"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:fontFamily="@font/made_tommy_regular"
            android:background="@drawable/bg_container_text">
        </Button>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_margin="5sp"
        android:gravity="center_vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40sp"
            app:cardPreventCornerOverlap="false">
            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/bg_profile4">
            </ImageView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:text="Steven, \nSistem Informasi"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginEnd="100sp">
        </TextView>
        <Button
            android:id="@+id/btnChat3"
            android:layout_width="70sp"
            android:layout_height="60sp"
            android:text="Start Chat"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:fontFamily="@font/made_tommy_regular"
            android:background="@drawable/bg_container_text">
        </Button>

    </LinearLayout>

</LinearLayout>