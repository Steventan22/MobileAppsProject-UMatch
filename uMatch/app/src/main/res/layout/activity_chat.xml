<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DCD6F7"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/layoutback"
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5sp">
            <ImageButton
                android:id="@+id/buttonback"
                android:layout_width="58sp"
                android:layout_height="46sp"
                android:layout_margin="5sp"
                android:background="@drawable/rounded_back">
            </ImageButton>
            <View
                android:layout_width="5sp"
                android:layout_height="0sp">
            </View>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20sp">
            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/bg_profile1">
            </ImageView>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="3sp"
            android:paddingLeft="3sp">
            <TextView
                android:id="@+id/receiver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leonardo"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#424874">
            </TextView>
        </LinearLayout>

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60sp"
            app:contentInsetStartWithNavigation="0sp">
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:scrollbars="vertical">
        </androidx.recyclerview.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_gradient"
            android:rotation="180">
        </View>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginBottom="15sp"
        android:background="@drawable/bg_container_text"
        android:padding="5sp">

        <EditText
            android:id="@+id/text_content"
            android:layout_marginStart="2sp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Write a message..."
            android:imeOptions="actionSearch"
            android:padding="10sp" />
        <ImageButton
            android:id="@+id/btn_send"
            android:layout_gravity="center_vertical"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_marginRight="3sp"
            android:background="@drawable/rounded_send"
            android:clickable="true"
            android:padding="10sp"
            app:tint="#00897B" />

    </LinearLayout>
</LinearLayout>


